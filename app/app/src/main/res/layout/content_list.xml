<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <EditText
            android:id="@+id/content_id"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"></EditText>
        <EditText
            android:id="@+id/image_path"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"></EditText>

        <ImageView
            android:id="@+id/content_header_image"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_margin="0dp"
            android:padding="0dp"></ImageView>

        <TextView
            android:id="@+id/content_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="THE ELDER OF OF SKYRIM"
            android:textColor="@color/dark_gray"
            android:textSize="25dp"></TextView>


        <TextView
            android:id="@+id/content_description"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_margin="5dp"
            android:text="The elder of Skyrim best game of the 2015 just buy and play until die you never gonna foget this game . believe me buddy kajflksjdf dsjfksdj fjsajflskjaf;l orem ipsum was craeted in 1090 when mozart forts he thought it gonna be good idea"
            android:textColor="@color/dark_gray"
            android:textSize="15dp"></TextView>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <LinearLayout

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/content_date_image"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="4dp"
                    android:src="@drawable/ic_baseline_access_time_24"></ImageView>


                <TextView
                    android:id="@+id/content_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="1 hour ago"
                    android:textSize="10dp" />

                <ImageView
                    android:id="@+id/content_source_image"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ic_baseline_source_24"></ImageView>


                <TextView
                    android:id="@+id/content_source"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Turkish Airlines"
                    android:textSize="10dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1.5"
                android:gravity="right">

                <Button
                    android:id="@+id/content_favorites"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:drawableLeft="@drawable/ic_baseline_star_border_24"
                    android:padding="0dp"
                    android:text="Add favorites"
                    android:textColor="@color/black"
                    android:textSize="9dp" />

                <Button
                    android:id="@+id/content_readmore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:backgroundTint="@color/white"
                    android:drawableLeft="@drawable/ic_baseline_arrow_forward_ios_24"
                    android:padding="0dp"
                    android:text="Read"
                    android:textColor="@color/black"
                    android:textSize="10dp" />


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>